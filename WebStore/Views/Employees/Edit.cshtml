@model WebStore.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Редактирование сотрудника";
}

<div class="container">
    <h1>Редактирование</h1>
    <hr/>
    <div class="row">
        <div class="col-sm-4">
            <form asp-action="Edit" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="FirstName">Имя</label>
                    <input asp-for="FirstName"/>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Фамилия</label>
                    <input asp-for="LastName"/>
                </div>

                <div class="form-group">
                    <label asp-for="Patronymic">Отчество</label>
                    <input asp-for="Patronymic"/>
                </div>

                <div class="form-group">
                    <label asp-for="Age">Возраст</label>
                    <input asp-for="Age"/>
                </div>

                <div class="form-group">
                    <input type="submit" value="Сохранить" class="btn btn-primary"/>
                </div>

            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Вернуться к списку</a>
        <a asp-action="Delete" asp-route-id="@Model.Id">Удалить сотрудника</a>
    </div>

</div>