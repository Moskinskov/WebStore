@model WebStore.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Удаление сотрудника";
}

<div class="container">
    <head>
        <title>Delete</title>
    </head>
    <body>
    <div>
        <h2>Удаление</h2>
        <h3>Сотрудник @Model.FirstName @Model.LastName</h3>
        <hr/>
        <dl class="row">
            <dt class="col-sm">ID @Model.Id</dt>
            <dt class="col-sm">Имя @Model.FirstName</dt>
            <dt class="col-sm">Фамилия @Model.LastName</dt>
            <dt class="col-sm">Отчество @Model.Patronymic</dt>
            <dt class="col-sm">Возраст @Model.Age</dt>
        </dl>

        <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <input type="submit" value="Удаление" class="btn btn-danger"/>
            <hr/>
            <a asp-action="Index">Назад к списку</a>
        </form>
    </div>
    </body>
</div>